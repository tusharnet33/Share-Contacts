<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts5.AddProfile"
             Title="Add Profile">
    <ContentPage.Content>
        <StackLayout Margin="10,35,10,10">
            <Label Text="Your Phone Number"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Clicked="ShowNumber_Clicked" Text="Show Phone Number"></Button>
            <Label x:Name="PhoneNumber" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></Label>
            <Image x:Name="QRImage" Source="" />
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>